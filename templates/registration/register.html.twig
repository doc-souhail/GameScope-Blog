{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="register-form">

    {{ form_start(registrationForm, { attr:{
        class: 'register-container'
    }}) }}
        <h1 class="register-header">Create account</h1>

        {{ form_row(registrationForm.email, { attr:{
        class: 'shadow-none login-elements',
            'placeholder': "Email"
    } })}}
        {{form_row(registrationForm.nickname, { attr:{
            class: 'shadow-none login-elements',
            'placeholder': "Nickname"
        } })}}
        {{ form_row(registrationForm.plainPassword, { attr:{
            class: 'shadow-none login-elements',
            'placeholder': "Password"
        } })}}
        {{ form_row(registrationForm.agreeTerms, { attr:{
            class: 'terms'
        } })}}
        <button type="submit" class="register-btn">Register</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
